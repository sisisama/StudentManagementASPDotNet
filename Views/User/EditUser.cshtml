@model UserDetails
@{
    ViewBag.Title = $"Edit User ({Model.username})";
    Layout = "_Layout";
}

<h2 class="col-md-6 offset-md-2 mb-5 mt-4">User Registration</h2>
<div class="row mb-4">
    <div class="col-md-2"></div>
    <label for="email" class="col-md-2 col-form-label">Id</label>
    <div class="col-md-4">
        <input type="text" class="form-control" id="userId" name="id" asp-for="id" readonly="readonly">
    </div>
</div>
<div class="row mb-4">
    <div class="col-md-2"></div>
    <label for="email" class="col-md-2 col-form-label">Name</label>
    <div class="col-md-4">
        <input type="text" class="form-control" id="userName" name="username" value="@Model.username">
    </div>
</div>
<div class="row mb-4">
    <div class="col-md-2"></div>
    <label for="email" class="col-md-2 col-form-label">Email</label>
    <div class="col-md-4">
        <input type="email" class="form-control" id="email" name="email" value="@Model.email">
    </div>
</div>
<div class="row mb-4">
    <div class="col-md-2"></div>
    <label for="password" class="col-md-2 col-form-label">Password</label>
    <div class="col-md-4">
        <input type="password" class="form-control" id="password" name="password" value="@Model.password">
    </div>
</div>
<div class="row mb-4">
    <div class="col-md-2"></div>
    <label for="userRole" class="col-md-2 col-form-label">User Role</label>
    <div class="col-md-4">
        @* <select class="form-select" aria-label="Education" id="userRole" name="role"> *@
        @*     <option @(Model.role == null ? "selected" : "")>--SELECT ROLE--</option> *@
        @*     <option value="ADMIN" @(Model.role == "ADMIN" ? "selected" : "")>ADMIN</option> *@
        @*     <option value="USER" @(Model.role == "USER" ? "selected" : "")>USER</option> *@
        @* </select> *@
        <select class="form-select" aria-label="Education" id="userRole" name="role">
            <option selected="selected">--SELECT ROLE--</option>
            <option value="ADMIN">ADMIN</option>
            <option value="USER">USER</option>
        </select>
    </div>
</div>
<div class="row mb-4">
    <div class="col-md-4"></div>
    <div class="col-md-6">
        <button type="button" id="btnUpdate" class="btn btn-secondary col-md-2">Update</button>
    </div>
</div>

@section scripts
{
    <script src="~/js/user-edit.js"></script>
    <script>
    $(document).ready(function (){
        $('#userRole').val('@Model.role');
    })
    </script>
}