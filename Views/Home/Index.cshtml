@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/text.css">
    <title> Student Registration LGN001 </title>
</head>
<body class="login-page-body">

    <div class="login-page">
        <div class="form">
            <div class="login">
                <div class="login-header">
                    <h1>Welcome!</h1>
                </div>
            </div>
            <form class="login-form" asp-action="Login"  asp-controller="Home">
                <input type="text" placeholder="User Email" name="email" />
                <input type="password" placeholder="Password" name="password"/>
                <button>login</button>
                <p class="message">Not registered? <a href="@Url.Action("CreateAccount", "Home")">Create an account</a></p>
            </form>
        </div>
    </div>
</body>

</html>